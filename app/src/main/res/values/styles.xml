<resources>

    <!-- Base application theme. -->
    <style name="IdealLibraryTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDark</item>
        <item name="colorPrimaryDark">@color/colorDark</item>
        <item name="colorAccent">@color/colorGreenAccent</item>
        <item name="colorError">@color/colorRedAccent</item>
        <item name="android:fontFamily">@font/comic_neue_regular</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Close button icon -->
        <item name="closeIcon">@drawable/ic_close</item>
    </style>

</resources>
